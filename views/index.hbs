<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet Management</title>

    <!-- Bootstrap 5.0 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons (Optional for icons) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Optional: Add custom CSS if needed -->
    <style>
        /* Add custom styles here if necessary */
    </style>
</head>
<body>

    <div class="card my-4">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Pet Management</h2>
        </div>
        <div class="card-body">
            <!-- Create New Pet button -->
            <a href="/create" class="btn btn-primary mb-3">Create New Pet</a>

            <!-- Search form -->
            <form action="/search" method="get" class="row g-3 mb-3">
                <div class="col-md-5">
                    <input type="text" name="pet_name" placeholder="Pet Name" class="form-control">
                </div>
                <div class="col-md-5">
                    <input type="text" name="type_name" placeholder="Pet Type" class="form-control">
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Search" class="btn btn-outline-primary">
                </div>
            </form>

            <!-- Pet data table -->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Pet ID</th>
                            <th scope="col">Pet Name</th>
                            <th scope="col">Age</th>
                            <th scope="col">Owner Name</th>
                            <th scope="col">Pet Type</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each pets}}
                        <tr>
                            <td>{{pet_id}}</td>
                            <td>{{pet_name}}</td>
                            <td>{{age}}</td>
                            <td>{{first_name}} {{last_name}}</td>
                            <td>{{type_name}}</td>
                            <td>
                                <a href="/edit/{{pet_id}}" class="btn btn-warning btn-sm me-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit this pet">Edit</a>
                                <a href="/delete/{{pet_id}}" class="btn btn-danger btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete this pet">Delete</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5.0 JS Bundle (includes Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Initialize tooltips -->
    <script>
        var tooltipTriggerList = Array.prototype.slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>

</body>
</html>
